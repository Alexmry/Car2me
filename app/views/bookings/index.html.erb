<h1 class="text-center mt-3 title-bookings" style="color: #5353b9;">Review your bookings</h1>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mt-1 title-bookings" id="title-bookings-show">Your cars</h2>
        <%= link_to "Back", root_path, class:"btn btn-info-car-small" %>
    </div>
    <hr>
    <div class="bakground-card-purple">
        <div class="cards-bookings">
            <% @bookings.each do |booking| %>
                <% car = Car.find(booking.car_id) %>
                <div class="card car-bookings-index" data-aos="fade-right" style="width: 16rem;">
                    <% if car.photos.attached? %>
                        <%= cl_image_tag car.photos.first.key, class: "card-img-top", width: 300, height: 300, crop: :thumb %>
                    <% else %>
                        <%= image_tag "default.jpg", class:"default" %>
                    <% end %>
                    <div class="card-body">
                        <h5 class="card-title"><%= car.brand.upcase %></h5>
                        <p class="card-text" style="margin-bottom: 0px;"><%= car.model.capitalize %></p>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-center">
                        <%= link_to "Infos", edit_booking_path(1), class: "btn btn-info-car" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <h2 class="mt-1 title-bookings mt-5">Your bookings</h2>
    <hr>
    <div class="bakground-card-purple-dark mt-4">
        <div class="cards-bookings">
            <% @my_bookings.each do |booking| %>
                <% car = Car.find(booking.car_id) %>
                <div class="card car-bookings-index" data-aos="fade-right" style="width: 16rem;">
                    <% if car.photos.attached? %>
                        <%= cl_image_tag car.photos.first.key, class: "card-img-to", width: 300, height: 300, crop: :thumb %>
                    <% else %>
                        <%= image_tag "default.jpg", class:"default" %>
                    <% end %>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5>Status:</h5>
                            <% if booking.confirmed %>
                                <h5 class="card-title card-info-status">Confirmed</h5>
                            <% elsif booking.confirmed == nil %>
                                <h5 class="card-title card-info-status">Pending</h5>
                            <% else %>
                                <h5 class="card-title card-info-status">Refused</h5>
                            <% end %>
                        </div>
                        <p class="card-text"><%= car.model.upcase %></p>
                        <p class="card-text"><%= car.brand.capitalize %></p>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-around align-items-center mb-3">
                        <%= link_to "Infos", booking_path(booking.id), class: "btn btn-info-car", style:"margin-bottom: 0px"%>
                        <% if booking.confirmed == false %>
                            <%= link_to "Delete", booking_path(booking.id), class: "btn btn-outline-danger", method: :delete, style: "height: 50px;" %>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="top-button d-flex justify-content-center" width="100%">
        <button class="btn-chevronUp mt-5" id="btn-goUp-bookings"><i class="fas fa-chevron-circle-up"></i></button>
    </div>
</div>
