<h1 class="text-center mt-3" style="color: #5353b9;">Review your bookings</h1>
<div class="container mt-5">
<h2 class="mt-5">Your cars</h2>
<hr>
    <% @cars.each do |car| %>
        <div class="card">
            <div class="card-body d-flex align-items-center justify-content-between mb-3">
                <% if car.photos.attached? %>
                    <%= cl_image_tag car.photo.key, width: 300, height: 300, crop: :thumb %>
                <% end %>
                <%= car.brand %>
                <%= car.model %>
            </div>
        </div>
    <% end %>
<h2 class="mt-5">Your bookings</h2>
<hr>
    <% @bookings.each do |booking| %>
        <div class="card">
            <div class="card-body d-flex align-items-center justify-content-between mb-3">
                <% car = Car.find(booking.car_id) %>
                <% if booking.confirmed %>
                    <div class="card" style="width: 18rem;">
                        <img src="https://images.unsplash.com/photo-1494976388531-d1058494cdd8?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" class="card-img-top" height="300px" width="300px">
                        <div class="card-body">
                            <h5 class="card-title">Confirmed</h5>
                            <p class="card-text"><%= car.model %></p>
                            <p class="card-text"><%= car.brand %></p>
                        </div>
                        <%= link_to "More infos on your booking", booking_path(booking.id), class: "btn btn-outline-success" %>
                    </div>
                <% else %>
                    <div class="card" style="width: 18rem;">
                        <img src="https://images.unsplash.com/photo-1494976388531-d1058494cdd8?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" class="card-img-top" height="300px" width="300px">
                        <div class="card-body">
                            <h5 class="card-title">Pending</h5>
                            <p class="card-text"><%= car.model %></p>
                            <p class="card-text"><%= car.brand %></p>
                        </div>
                        <%= link_to "More infos on your booking", booking_path(booking.id), class: "btn btn-outline-success" %>
                    </div>
                <% end %>

            </div>
        </div>
    <% end %>
    <%= link_to "More infos on your car", edit_booking_path(1), class: "btn btn-outline-primary" %>
    <br><br>
</div>

