<div class="container text-center">
  <h1 class="p-5">Car presentation</h1>
  <div class="row">
    <div class="col-12 col-lg-6">
      <div class="card-owner bg-light"> 
        <h2>Owner info</h2>
        <p><%= @owner.name %></p>
        <p><%= @owner.email %></p>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="card-client bg-light">
        <div class="mt-3 carousel slide" data-ride="carousel">
          <% @car.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 200, width: 200, crop: :fill %>
          <% end %>
        </div>
        <div class="card-client-body">
          <div class="card-client-body-info">
            <h2 class="card-title"><%= @car.brand %></h2>
            <p class="card-text"><%= @car.model %></p>
          </div>
          <h2 class="card-text"><%= @car.price %>£/day</h2>
        </div>
      </div>
    </div>
  </div>
  <div class="map-container">
    <div id="map"
       style="width: 50%; height: 300px;"
       data-markers="<%= @marker.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <div class="d-flex justify-content-center">
   <div class="bg-white rounded p-3" style="width: 380px">
     <h5>book your car</h5>
     <div class="d-flex justify-content-between mx-5">
      <% if @owner != current_user %>
         <%= simple_form_for [@car, @booking] do |f| %>
           <%= hidden_field_tag :car_id, @car.id %>
           <%= f.submit 'book', class:'btn btn-primary' %>
         <% end %>
       <% end %>
       <%= link_to 'back' , root_path, class:'btn btn-outline-primary' %>
     </div>
   </div>
  </div>
 <% unless @car.bookings.empty? %>
    <div class="row my-2">
      <% @car.bookings.each do |booking| %>
        <div class="col-12 mt-3">
          <div class="card w-75">
            <div class="card-body">
                <h5 class="card-title">
                  <% booking.review.rating.times do %>
                  <i class="fas fa-star"></i>
                  <% end %>
                  <% empty_stars = 5 - booking.review.rating %>
                  <% empty_stars.times do %>
                  <i class="far fa-star"></i>
                  <% end %>
                </h5>
                <p class="card-text"><%= booking.review.content %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

</div>




<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <% @car.photos.each_with_index do |slide, i| %>
      <div class="carousel-item <%= 'active' if i == 0 %>">
         <%= cl_image_tag slide.key, height: 200, width: 200, crop: :fill, class:"d-block w-100"%>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>




