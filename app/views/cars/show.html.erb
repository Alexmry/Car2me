<div class="container text-center">
  <h1 class="p-5">Car presentation</h1>
  <div class="row">
    <div class="col-12 col-lg-6">
      <div class="card-owner bg-light"> 
        <h2>Owner info</h2>
        <p><%= @owner.name %></p>
        <p><%= @owner.email %></p>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="card-client bg-light">
        <div class="mt-3">
          <% @car.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 200, width: 200, crop: :fill %>
          <% end %>
        </div>
        <div class="card-client-body">
          <div class="card-client-body-info">
            <h2 class="card-title"><%= @car.brand %></h2>
            <p class="card-text"><%= @car.model %></p>
          </div>
          <h2 class="card-text"><%= @car.price %>£/day</h2>
        </div>
      </div>
    </div>
  </div>
  <% if current_user.id != @car.user_id %>
    <div class="bg-white rounded p-3" style="width: 380px">
      <h5>book your car</h5>
      <div class="d-flex justify-content-between">
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= hidden_field_tag :car_id, @car.id %>
          <%= f.submit 'book', class:'btn btn-primary' %>
        <% end %>
        <%= link_to 'back' , root_path, class:'btn btn-outline-primary' %>
      </div>
    </div>
  <% end %>
</div>
